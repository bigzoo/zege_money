<div class="row">
  <div class="center">
    <h3>Send Money</h3>
  </div>
    <%= form_for @transaction, url: {action: "create"}, html: {class: "col s12"} do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= select_tag('transaction[receiver_identifier_type]', options_for_select([['Phone Number', 'phone'], ['Email', 'email']])) %>
          <%= f.label 'Send Type'%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :receiver_identifier, required:'required'%>
          <%= f.label 'Receiver email/phone'%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.number_field :amount, class:'validate', required:'required'%>
          <%= f.label :amount%>
        </div>
      </div>
      </div>
      <%= f.submit "Send", class:'btn blue lighten-2' %>
    <% end %>
