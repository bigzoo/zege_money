<!DOCTYPE html>
<html>
  <head>
    <title>Zege Money</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav'%>
    <div class="center">
    <% if flash[:notice] %>
      <div class="green"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="red"><%= flash[:alert] %></div>
    <% end %>
    <% if user_signed_in? %>
    <% if !current_user.first_name || !current_user.last_name || !current_user.phone_number%>
      <div class="red">Please update your account with your details <%= link_to 'here', edit_user_registration_path %></div>
    <% end %>
    <% end %>
  </div>
    <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
